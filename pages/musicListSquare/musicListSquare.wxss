.musicListSquareContainer {
    height: 100%;
    width: 100%;
    background-color: #f9f9f9;
}

.head {
    width: 100%;
    height: 60rpx;
    display: flex;
    align-items: center;
    padding-top: 10rpx;
}

.tags {
    white-space: nowrap;
    overflow: hidden;
    width: 85%;
    margin: 20rpx 0 20rpx 32rpx;
    border-right: 1rpx solid #ccc;
    display: flex;
    align-items: center;
}

.tagItem {
    display: inline-block;
    margin: 0rpx 32rpx;
    color: rgb(95, 94, 94);
    font-size: 28rpx;
}

.tagItem:nth-child(1){
    margin:0 32rpx 0 0;
}

.moreTag {
    width: 10%;
    height: 60rpx; 
    line-height: 65rpx;
    text-align: center;
}

.icon-tianjia {
    font-size: 40rpx;
    color: rgb(95, 94, 94);
}

.body {
    margin-top: 20rpx;
}

.musicListScroll {
    height: calc(100vh - 100rpx);
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding: 0 30rpx;
    box-sizing: border-box;
    text-align: center;
    /* justify-content: space-between; */
}

.listItem {
    width: 31%;
    height: 24vh;
    line-height: 36rpx;
}

.listItem:nth-child(3n+2){
    margin:0 3.5%;
}

.cover {
    width: 100%;
    height: calc(33vw - 20rpx);
    border-radius: 20rpx;
}

.title {
    font-size: 26rpx;
    margin-top: 10rpx;
    color: rgb(56, 56, 56);
    word-break: break-all;
    text-overflow: ellipsis;
    display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
    -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
    -webkit-line-clamp: 2; /** 显示的行数 **/
    overflow: hidden;  /** 隐藏超出的内容 **/
}

.allTags {
    background-color: #fff;
    height: 100%;
    width: 100%;
}

.placeholder {
    width: 100%;
    height: 100rpx;
}

.category {
    margin: 30rpx 0 70rpx;
}

.categoryTitle {
    font-size: 30rpx;
    margin-left: 35rpx;
}

.categoryList {
    display: flex;
    flex-wrap: wrap;
}

.categoryItem {
    /* border: 1px solid red; */
    background-color: #f3f3f3;
    width: 20vw;
    margin:30rpx 0 0 4vw;
    padding: 15rpx 0 ;
    text-align: center;
    font-size: 26rpx;
    border-radius: 62rpx;
}

.selected {
    color: black;
    font-weight: 600;
}

.categorySwiper,
.categorySwiperItem {
    width: 100%;
    height: calc(100vh - 100rpx);
}

.returnButton {
    margin:30rpx;
    display: flex;
    align-items: center;
}

.icon-fanhui {
    font-size: 40rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.info {
    margin-left: 20rpx;
    font-size: 30rpx;
    color: rgb(78, 78, 78);
}

.loadingContainer {
    width: 100%;
    text-align: center;
    margin-bottom: 130rpx;
    margin-top: 50rpx;
}

.head .icon-fanhui {
    color: rgb(114, 114, 114);
    margin-left: 20rpx;
}

.tagName {
    margin-left: 10rpx;
    font-size: 32rpx;
    color: rgb(70, 69, 69);
    line-height: 60rpx;
}

.mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: calc(100vh - 110rpx);
    z-index: 10000;
}