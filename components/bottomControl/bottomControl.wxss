
@import "/static/iconfont/iconfont.wxss";

.musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width: 30vw;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.authorName {
  font-size: 24rpx;
  color:#787677;
  height: 100rpx;
  line-height: 109rpx;
  max-width: 20vw;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.fenge{
  font-size: 24rpx;
  color:#787677;
  height: 100rpx;
  line-height: 109rpx;
  margin: 0 5rpx;
}

.bottomControl {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  border-top: 1rpx solid #ddd;
  background-color: white;
  /* overflow: hidden; */
}

.bottomControl .cover{
  position: absolute;
  top: 0;
  left: 30rpx;
  height: 120rpx;
  width: 120rpx;
  z-index: 10;
}

.bottomControl .disc{
  height: 100%;
  width: 100%;
}

.bottomControl .musicCover {
  width: 75%;
  height: 75%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border-radius: 10rpx;
  z-index: -1;
}

.bottomControl .musicInfo{
  margin-left: 150rpx;
  height: 100%;
}

.bottomControl view .musicInfo {
  margin-left: 80rpx;
  font-size: 30rpx;
  color: #aaa;
}

.bottomControl .musicInfo {
  line-height: 120rpx;
}

.controlButton {
  position: absolute;
  right: 30rpx;
}

.controlButton .iconfont{
  font-size: 60rpx;
  color: #323232;
  line-height: 120rpx;
}

.icon-iconsMusicyemianbofangmoshiPlayList{
  margin-left: 25rpx;
}

.bottomControlSwiper{
  position: absolute;
  top: 0%;
  left: 0;
  height: 20vh;
  width: 75%;
  /* overflow: none; */
}


.musicList {
  position: fixed;
  bottom: 3vh;
  left: 50%;
  /* 通过位移隐藏列表框 */
  transform: translate(-50%,58vh);
  width: 95%;
  height: 55vh;
  border-radius: 40rpx;
  background-color: #fff;
  transition: transform 0.5s;
  z-index: 1000000;
  /* display: block; */
}

.musicListTitle {
  height: 8vh;
  width: 100%;
  font-size: 36rpx;
  line-height: 8vh;
  margin-left: 35rpx;
  font-weight: 600;
}

.musicListLength{
  font-size: 26rpx;
  color:#a0a0a0;
}

.musicListSrcoll{
  margin-left: 35rpx;
  height: 47vh;
  overflow-anchor: auto;
  -webkit-overflow-scrolling:touch;
}

.musicItem {
  position: relative;
  display: flex;
  align-items: baseline;
  overflow-anchor: auto;

  /* margin: 45rpx 0; */
}

.musicItem:nth-child(1){
  margin-top:0;
}

.fenge {
  margin: 0 10rpx;
  font-size: 22rpx;
  color:#a0a0a0;
}

.musicItem .author {
  font-size: 22rpx;
  color:#a0a0a0;
}

.musicItem .button {
  position: absolute;
  color: #a0a0a0;
  font-size: 50rpx;
  top: 50%;
  right: 10%;
  transform: translateY(-50%);
}

.maskLayer{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.3);
  top: 0;
  left: 0;
  z-index: 1000;
  display: none;
}

.isMaskLayerShow {
  opacity:1;
  display: block;
}

.isListShow {
  transform: translate(-50%,0vh);
  /* display: none; */
}